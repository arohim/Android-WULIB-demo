<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchDetail" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/panel"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:text="Journal detail"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/jsd_tv_lo_favorite"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:background="@drawable/sr_style"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/jsd_tv_favorite"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/nonfavorite" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:alpha="0.3"
        android:background="@drawable/shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <!-- android:background="@drawable/border_table" -->

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/TextView04"
                            style="@style/headTable"
                            android:text="Author : " />

                        <TextView
                            android:id="@+id/jsd_tv_author"
                            style="@style/contentTable"
                            android:text="Author" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/TextView05"
                            style="@style/headTable"
                            android:text="Title : " />

                        <TextView
                            android:id="@+id/jsd_tv_title"
                            style="@style/contentTable"
                            android:maxWidth="250dp"
                            android:text="Title" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/TextView06"
                            style="@style/headTable"
                            android:text="Subject : " />

                        <TextView
                            android:id="@+id/jsd_tv_subject"
                            style="@style/contentTable"
                            android:text="subject" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/TextView07"
                            style="@style/headTable"
                            android:layout_marginRight="10dp"
                            android:text="Source : " />

                        <TextView
                            android:id="@+id/jsd_tv_source"
                            style="@style/contentTable"
                            android:maxWidth="50dp"
                            android:text="source" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/TextView06"
                            style="@style/headTable"
                            android:layout_marginLeft="5dp"
                            android:text="Language : " />

                        <TextView
                            android:id="@+id/jsd_tv_language"
                            style="@style/contentTable"
                            android:text="language" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/TextView07"
                            style="@style/headTable"
                            android:layout_marginRight="10dp"
                            android:text="ISSN : " />

                        <TextView
                            android:id="@+id/jsd_tv_issn"
                            style="@style/contentTable"
                            android:maxWidth="50dp"
                            android:text="issn" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/TextView06"
                            style="@style/headTable"
                            android:text="Status : " />

                        <TextView
                            android:id="@+id/jsd_tv_status"
                            style="@style/contentTable"
                            android:text="status" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
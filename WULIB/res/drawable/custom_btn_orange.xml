<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
<!--              <stroke android:width="1dip" android:color="#eaeffa" /> -->
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#eaeffa"
                 android:endColor="#cceffa"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
<!--              <stroke android:width="1dip" android:color="#eaeffa" /> -->
             <solid  android:color="#e0341e"/> 
              <gradient 
               	 android:angle="-90"   
                 android:startColor="#eaeffa"
                 android:endColor="#cceffa"  />       
         </shape>
     </item>	
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#cceffa"
                 android:endColor="#eaeffa" />            
         </shape>
     </item>
</selector>